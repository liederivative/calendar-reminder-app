{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "jsx": "react",
      "module": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": false,
      "removeComments": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "strict": true,
      "outDir": "lib",
      "lib": ["es6", "es7", "dom"],
      "baseUrl": "src",
      "esModuleInterop": true,
      "paths": {
        "app/*": ["./app/*"]
      }
    },
    "exclude": [
      "lib",
      "node_modules",
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  }